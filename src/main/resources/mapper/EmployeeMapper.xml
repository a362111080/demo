<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<mapper namespace="com.zero.egg.dao.EmployeeMapper">
    <select id="getEmployee" parameterType="EmployeeQuery" resultType="com.zero.egg.model.Employee">SELECT * FROM SYS_EmpLoyee_Data 	　<where>　　　　　		
			<if test="QueryCode != null" >strUserCode=#{QueryCode}</if>	
			<if test="QueryStoreCode != null" > and strStoreCode=#{QueryStoreCode}</if>	
　　　		　</where>
    </select>
    <update id="UpdateEmployee" parameterType="EmployeeQuery">
    	update SYS_EmpLoyee_Data
    <set>
       <if test="QueryLngState != null">
        LngState = #{QueryLngState,jdbcType=INTEGER},
      </if>
    </set>
    where strUserCode = #{QueryCode,jdbcType=BIGINT}
  </update>
</mapper>